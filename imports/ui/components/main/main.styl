@require '../../layouts/variables.styl'
@require '../../layouts/mixins.styl'

main
  @import '../events/events.styl'
  table
    width: 50%
    tr
      &:hover
        background-color: $tertiary-grey
      td
        font-size: 80%
        line-height: 1.5em
        pad-block 0.25em
        pad-inline 1em
        &:first-child
          white-space: nowrap
        &:not(:first-child)
          color: $primary-red
          text-bold()
