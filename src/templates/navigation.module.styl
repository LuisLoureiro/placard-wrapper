@require 'mixins'

absolute()
  position absolute

hidden()
  display none

inline()
  display inline-block

relative()
  position relative

nowrap()
  white-space nowrap


.countries-list
  absolute()
  hidden()

.country-item
.sport-item
  pad-lr(1em)
  unstyled()
  &:hover
    ol
      display block

.sport-item
  inline()
  relative()

.countries-list
  black-background()
  pad-left(0)

.sports-list
  black-background()
  pad-left(0)
  margin 0

.nav-link
  color #FFF
  text-decoration none
  nowrap()
  &.active
    background-color #D4373E
